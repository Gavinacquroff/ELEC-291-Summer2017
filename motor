#include <DRV8835MotorShield.h>

/*
 * This example uses the DRV8835MotorShield library to drive each motor with the
 * Pololu DRV8835 Dual Motor Driver Shield for Arduino forward, then backward. 
 * The yellow user LED is on when a motor is set to a positive speed and off when
 * a motor is set to a negative speed.
 */

#define LED_PIN 13
int speed=400;
int TIME1=1000; //2m/speed speed=pi*r*rpm/30
int TIME2=1000; //1.5m/speed
int TIME3=400;  //30*r/rpm
int TIME4=100;  //7.5r/rpm

DRV8835MotorShield motors;

void setup()
{
  pinMode(LED_PIN, OUTPUT);
  
  // uncomment one or both of the following lines if your motors' directions need to be flipped
  //motors.flipM1(true);
  //motors.flipM2(true);
}

void loop()
{
  // run M1 motor and M2 motor with positive speed, runs forward for 2m
   
//  motors.setM1Speed(speed);
//  motors.setM2Speed(speed);
//  delay(TIME1);
//
//  // stop for a while
//  motors.setM1Speed(0);
//  motors.setM2Speed(0);
//  delay(100);
//  
//  // turn 180 degree
//  motors.setM1Speed(speed);
//  motors.setM2Speed(-speed);
//  delay(2500);   
//
//  // stop for a while
//  motors.setM1Speed(0);
//  motors.setM2Speed(0);
//  delay(100);
//  
//  // run M1 motor and M2 with positive speed, runs forward for 1.5m
//  motors.setM1Speed(speed);
//  motors.setM2Speed(speed);
//  delay(TIME2);
//
//  // stop for a while
//  motors.setM1Speed(0);
//  motors.setM2Speed(0);
//  delay(100);

  // turn 45 degree
  motors.setM1Speed(speed);
  motors.setM2Speed(-speed);
  delay(625);
  
  motors.setM1Speed(0);
  motors.setM2Speed(0);
  delay(2000);    
  
}
