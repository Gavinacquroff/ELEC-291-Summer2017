/*
  AnalogReadSerial
  Reads an analog input on pin 0, prints the result to the serial monitor.
  Attach the center pin of a potentiometer to pin A0, and the outside pins to +5V and ground.
 */

#define IR_PIN_LEFT A0
#define IR_PIN_RIGHT A1
#include <DRV8835MotorShield.h>

int speed=400;

DRV8835MotorShield motors;
 
// the setup routine runs once when you press reset:
void setup() {
  // initialize serial communication at 9600 bits per second:
  Serial.begin(9600);
}
 
// the loop routine runs over and over again forever:
void loop() {
  // read the input on analog pin 0:
  int sensorValue_left = digitalRead(2);
  int sensorValue_right = digitalRead(3);
  Serial.println(sensorValue_left);
  Serial.print("    ");
  //Serial.println(sensorValue_right);

  // if right sensor is high, rotate to left side
  if (sensorValue_left==LOW & sensorValue_right==HIGH){
  motors.setM1Speed(200);
  motors.setM2Speed(-200);
  }
  
  // if left sensor is high, rotate to right side
  else if (sensorValue_left==HIGH & sensorValue_right==LOW ){ 
  motors.setM1Speed(-200);
  motors.setM2Speed(200);
  }

  else {
  motors.setM1Speed(400);
  motors.setM2Speed(400);
  }
  
  delay(1);        // delay in between reads for stability
}
